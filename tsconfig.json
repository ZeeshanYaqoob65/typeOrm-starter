{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./src",  // Ensures TypeScript only compiles src files
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*", "tsconfig.json", "dist"],
    "exclude": ["node_modules", "dist"]  // Prevent compiling node_modules and dist
  }
  